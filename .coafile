[all]
bears = LineCountBear, FilenameBear
files = **.py, **.yaml, **.toml, **.rst, **.md
file_naming_convention = snake
ignore = **/__pycache__/**, **/__pycache__, __pycache__, __pycache__/**, **/*.pyc, *.pyc, .github/**/*.md, test/**, thoth/storages/data/**, CHANGELOG.md, alembic/**
max_line_length = 120
max_lines_per_file = 4000

[all.python]
bears = PycodestyleBear, PyDocStyleBear
files = **.py
language = Python
editor = vim
ignore = setup.py, tests/**,docs/source/conf.py, alembic/**, thoth/storages/data/**

[zuul.yaml]
bears = YAMLLintBear
files = .zuul.yaml
max_line_length = 180
